{% extends "base.html.twig" %}

{% block title %}Album example · Bootstrap v5.0{% endblock %}


{% block body %}


<main>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Les differents gammes de produit à louer</h1>
                <p class="lead text-muted">....</p>
            </div>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for category in categories %}
                <div class="col">
                    <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <title>{{ category.name }}</title>
                            <rect width="100%" height="100%" fill="#55595c"></rect>
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em">{{ category.name }}</text>
                        </svg>
                        <input type="hidden" id="recupGamme" name="recupGamme" value="{{ category.id }}">
                        <div class="card-body">
                            <p class="card-text">{{ category.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="submit" class="btn btn-sm btn-outline-secondary" href="{{ path('app_category_show',{"id":category.id}) }}">Voir</a>
                                    {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                                        <a type="submit" class="btn btn-sm btn-outline-secondary" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        {% endfor %}
            </div>
            {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                <a type="submit" class="btn btn-primary btn-sm" href="{{ path('app_category_new')}}">Ajouter une Gamme</a>
            {% endif %}
        </div>

    </div>
</main>

    <footer class="text-muted py-5">
    </footer>
{% endblock %}
